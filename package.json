{
  "name": "masktool",
  "version": "0.1.0",
  "private": true,
  "author": "gatuwo_jp",
  "description": "MaskingTool desktop app",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "start:web": "node server.js",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:mac:publish": "electron-builder --mac --publish always",
    "dist:win:publish": "electron-builder --win --publish always"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "jp.gatuwo.maskingtool",
    "productName": "MaskingTool",
    "directories": {
      "output": "release"
    },
    "files": [
      "index.html",
      "styles.css",
      "app.js",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "MaskingTool-mac-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "MaskingTool-win-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  }
}
